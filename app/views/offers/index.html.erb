<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 d-flex">
      <% @offers.each do |offer| %>
      <div class="card m-3" style="width: 18rem;">
        <% if offer.photos.first.present? %>
          <%= cl_image_tag offer.photos.first.key %>
        <% else %>
          <img class="card-img-top" src="https://source.unsplash.com/random/?boardgame" alt="Card image cap">
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= offer.game_name %></h5>
          <p class="card-text"><%= offer.description %></p>
          <div>
            <div class="d-flex mb-2 align-items-center justify-content-between">
              <span class="badge badge-primary"><%= offer.game_condition %></span>
              <span class="card-text"><%= offer.price %> â‚¬</span>
            </div>
            <%= link_to 'See offer', offer_path(offer), class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

