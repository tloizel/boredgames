<div class="container pt-3">
  <h2>Dashboard</h2>

  <div id="accordion">
    <div class="card">
      <div class="card-header" id="headingOne">
        <h5 class="mb-0">
          <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
            My ads (<%= @my_offers.count %>)
          </button>
        </h5>
      </div>
      <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
        <div class="card-body">
          <div class="row justify-content-center flex-wrap">
            <div class="col-12 d-flex">
              <% @my_offers.each do |offer| %>
              <div class="card m-3 p-3" style="width: 200px;">
                <% if offer.photos.first.present? %>
                  <%= cl_image_tag offer.photos.first.key %>
                <% else %>
                  <img class="card-img-top" src="https://source.unsplash.com/random/?boardgame" alt="Card image cap">
                <% end %>
                <div class="card-body d-flex flex-wrap align-content-end justify-content-around">
                  <h5 class="card-title"><%= offer.game_name %></h5>
                  <div>
                    <% if offer.game_condition == "As new" %>
                      <p class="badge badge-success"><%= offer.game_condition %></p>
                    <% elsif offer.game_condition == "Good condition" %>
                      <p class="badge badge-primary"><%= offer.game_condition %></p>
                    <% elsif offer.game_condition == "Used" %>
                      <p class="badge badge-warning"><%= offer.game_condition %></p>
                    <% else %>
                      <p class="badge badge-danger"><%= offer.game_condition %></p>
                    <% end %>
                    <p class="card-text"><%= number_to_currency(offer.price, :unit => "€")%></p>
                    <%= link_to 'See offer', offer_path(offer), class: 'btn btn-primary' %>
                  </div>
                </div>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="card">
      <div class="card-header" id="headingTwo">
        <h5 class="mb-0">
          <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
            My sold games (<%= @my_sales.count %>)
          </button>
        </h5>
      </div>
      <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordion">
        <div class="card-body">
          <div class="row justify-content-center flex-wrap">
            <div class="col-12 d-flex">
              <% @my_sales.each do |offer| %>
              <div class="card m-3 p-3" style="width: 200px;">
                <% if offer.photos.first.present? %>
                  <%= cl_image_tag offer.photos.first.key %>
                <% else %>
                  <img class="card-img-top" src="https://source.unsplash.com/random/?boardgame" alt="Card image cap">
                <% end %>
                <div class="card-body d-flex flex-wrap align-content-end justify-content-around">
                  <h5 class="card-title"><%= offer.game_name %></h5>
                  <div>
                    <% if offer.game_condition == "As new" %>
                        <p class="badge badge-success"><%= offer.game_condition %></p>
                      <% elsif offer.game_condition == "Good condition" %>
                        <p class="badge badge-primary"><%= offer.game_condition %></p>
                      <% elsif offer.game_condition == "Used" %>
                        <p class="badge badge-warning"><%= offer.game_condition %></p>
                      <% else %>
                        <p class="badge badge-danger"><%= offer.game_condition %></p>
                      <% end %>
                    <p class="card-text"><%= number_to_currency(offer.price, :unit => "€")%></p>
                    <%= link_to 'See offer', offer_path(offer), class: 'btn btn-primary' %>
                  </div>
                </div>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="card">
      <div class="card-header" id="headingThree">
        <h5 class="mb-0">
          <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
            My bought games (<%= @my_purchases.count %>)
          </button>
        </h5>
      </div>
      <div id="collapseThree" class="collapse" aria-labelledby="headingThree" data-parent="#accordion">
        <div class="card-body">
          <div class="row justify-content-center flex-wrap">
            <div class="col-12 d-flex">
              <% @my_purchases.each do |purchase| %>
              <div class="card m-3 p-3" style="width: 200px;">
                <% if purchase.offer.photos.first.present? %>
                  <%= cl_image_tag purchase.offer.photos.first.key %>
                <% else %>
                  <img class="card-img-top" src="https://source.unsplash.com/random/?boardgame" alt="Card image cap">
                <% end %>
                <div class="card-body d-flex flex-wrap align-content-end justify-content-around">
                  <h5 class="card-title"><%= purchase.offer.game_name %></h5>
                  <div>
                    <% if purchase.offer.game_condition == "As new" %>
                        <p class="badge badge-success"><%= purchase.offer.game_condition %></p>
                      <% elsif purchase.offer.game_condition == "Good condition" %>
                        <p class="badge badge-primary"><%= purchase.offer.game_condition %></p>
                      <% elsif purchase.offer.game_condition == "Used" %>
                        <p class="badge badge-warning"><%= purchase.offer.game_condition %></p>
                      <% else %>
                        <p class="badge badge-danger"><%= purchase.offer.game_condition %></p>
                      <% end %>
                    <p class="card-text"><%= number_to_currency(purchase.offer.price, :unit => "€")%></p>
                    <%= link_to 'See offer', offer_path(purchase.offer), class: 'btn btn-primary' %>

                  <% if purchase.reviews.any? %>  
                    <h6>Your review</h6>
                    <%= purchase.reviews.first.content %>
                    <% rating = purchase.reviews.first.rating %>
                    <% rating.times do  %>
                      <i class="fas fa-star"></i>
                    <% end %>
                    <% (5-rating).times do  %>
                      <i class="far fa-star"></i>
                    <% end %>
                  <% else %>
                    <%= link_to 'Rate this purchase', new_offer_purchase_review_path(purchase.offer_id, purchase), class: 'btn btn-primary' %>
                  <% end %>

                  </div>
                </div>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>



