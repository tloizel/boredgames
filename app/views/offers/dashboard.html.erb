<div class="container">
  <h2>Dashboard</h2>
  <h3>My ads (<%= @my_offers.count %>)</h3>
  <div class="row justify-content-center flex-wrap">
    <div class="col-12 d-flex">
      <% @my_offers.each do |offer| %>
      <div class="card m-3 p-3" style="width: 200px;">
        <% if offer.photos.first.present? %>
          <%= cl_image_tag offer.photos.first.key %>
        <% else %>
          <img class="card-img-top" src="https://source.unsplash.com/random/?boardgame" alt="Card image cap">
        <% end %>
        <div class="card-body d-flex flex-wrap align-content-end">
          <h5 class="card-title"><%= offer.game_name %></h5>
          <p class="card-text"><%= offer.description %></p>
          <div>
            <p class="badge badge-primary"><%= offer.game_condition %></p>
            <p class="card-text"><%= offer.price %> €</p>
            <%= link_to 'See offer', offer_path(offer), class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  <h3>My sold games (<%= @my_sales.count %>)</h3>
  <div class="row justify-content-center flex-wrap">
    <div class="col-12 d-flex">
      <% @my_sales.each do |offer| %>
      <div class="card m-3 p-3" style="width: 200px;">
        <% if offer.photos.first.present? %>
          <%= cl_image_tag offer.photos.first.key %>
        <% else %>
          <img class="card-img-top" src="https://source.unsplash.com/random/?boardgame" alt="Card image cap">
        <% end %>
        <div class="card-body d-flex flex-wrap align-content-end">
          <h5 class="card-title"><%= offer.game_name %></h5>
          <p class="card-text"><%= offer.description %></p>
          <div>
            <p class="badge badge-primary"><%= offer.game_condition %></p>
            <p class="card-text"><%= offer.price %> €</p>
            <%= link_to 'See offer', offer_path(offer), class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  <h3>My bought games (<%= @my_transactions.count %>)</h3>
  <div class="row justify-content-center flex-wrap">
    <div class="col-12 d-flex">
      <% @my_transactions.each do |transaction| %>
      <div class="card m-3 p-3" style="width: 200px;">
        <% if transaction.offer.photos.first.present? %>
          <%= cl_image_tag transaction.offer.photos.first.key %>
        <% else %>
          <img class="card-img-top" src="https://source.unsplash.com/random/?boardgame" alt="Card image cap">
        <% end %>
        <div class="card-body d-flex flex-wrap align-content-end">
          <h5 class="card-title"><%= transaction.offer.game_name %></h5>
          <p class="card-text"><%= transaction.offer.description %></p>
          <div>
            <p class="badge badge-primary"><%= transaction.offer.game_condition %></p>
            <p class="card-text"><%= transaction.offer.price %> €</p>
            <%= link_to 'See offer', offer_path(transaction.offer), class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
