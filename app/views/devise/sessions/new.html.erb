<div class="container login-container">
  <h2 class="mt-3 text-center">Log in</h2>

  <div class="d-flex flex-wrap justify-content-center">
    <%= render "devise/shared/google" %>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    placeholder: 'Email',
                    label:false,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "mt-3" } %>
        <%= f.input :password,
                    placeholder: 'Password',
                    label:false,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions d-flex flex-wrap justify-content-center">
        <%= f.button(:submit, "Log in", { class: 'btn btn-primary m-3'})%>
      </div>
    <% end %>
    <div class="justify-content-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
